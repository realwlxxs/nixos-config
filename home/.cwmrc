fontname "Sarasa Mono Slab SC:pixelsize=14:style=bold:antialias=true:autohint=true"

borderwidth 5

sticky yes

color activeborder   "#f5bde6"
color inactiveborder "#c6a0f6"
color urgencyborder  "#48c6ff"
color groupborder    "#215d9c"
color ungroupborder  "#ff005b"
color menubg         "#c6a0f6"
color menufg         "#f5bde6"
color selfont        "#282a36"
color font           "#f8f8f2"

bind-key XF86AudioRaiseVolume  "pactl set-sink-volume @DEFAULT_SINK@ +5%"
bind-key XF86AudioLowerVolume  "pactl set-sink-volume @DEFAULT_SINK@ -5%"
bind-key XF86MonBrightnessDown "light -U 5"
bind-key XF86MonBrightnessUp   "light -A 5"

command term xst
command lock slock

autogroup 1 "xst-256color"
autogroup 2 "Emacs"

bind-key 4-t terminal
bind-key 4-l lock
bind-key 4-w menu-window
bind-key 4-r menu-exec
bind-key 4-s menu-ssh
bind-key 4-x window-close
bind-key 4-a window-stick
bind-key 4-z window-cycle-ingroup

bind-mouse 4-1 window-move
bind-mouse 4-2 window-group
bind-mouse 4-3 window-resize

bind-key 4S-1 window-toggle-1
bind-key 4S-2 window-toggle-2
bind-key 4S-3 window-toggle-3
bind-key 4S-4 window-toggle-4
bind-key 4S-5 window-toggle-5
bind-key 4S-6 window-toggle-6
bind-key 4S-7 window-toggle-7
bind-key 4S-8 window-toggle-8
bind-key 4S-9 window-toggle-9

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9
